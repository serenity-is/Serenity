<Project>
  <Import Project="$(MSBuildThisFileDirectory)..\build\Feature.Build.targets" />
  <PropertyGroup>
      <TransformDependsOn>SetSergenTransformArgs;TransformToolRestore</TransformDependsOn>
  </PropertyGroup>
  <Target Name="TransformToolRestore" BeforeTargets="BeforeBuild" DependsOnTargets="SetSergenTransformArgs"
          Inputs="$(DotnetToolManifestFile)" Outputs="$(DotnetToolRestoreStamp)"
          Condition="Exists('$(DotnetToolManifestFile)') And '$(DotNetSergen)' == 'dotnet sergen' And '$(SergenTransform)' != 'none' And ('$(SergenTransform)' != '' OR Exists('tsconfig.json'))">
    <Exec Command="dotnet tool restore" ContinueOnError="true" />
    <Touch Files="$(DotnetToolRestoreStamp)" AlwaysCreate="true" />
  </Target>
  <Target Name="TransformMvc" AfterTargets="ResolveProjectReferences" DependsOnTargets="$(TransformDependsOn)"
          Condition="'$(SergenTransform)' == 'mvc'">
    <MutexExec Command="$(DotNetSergen) mvc $(SergenTransformArgs)" MutexName="Global\SergenTransformWithDotnetRun" ContinueOnError="true" Condition="'$(DotNetSergen)' != 'dotnet sergen'"  WorkingDirectory="$(MSBuildProjectDirectory)" />
    <Exec Command="$(DotNetSergen) mvc $(SergenTransformArgs)" ContinueOnError="true" Condition="'$(DotNetSergen)' == 'dotnet sergen'" />
  </Target>
  <Target Name="TransformMvct" AfterTargets="ResolveProjectReferences" DependsOnTargets="$(TransformDependsOn)"
          Condition="'$(SergenTransform)' == 'mvct' OR '$(SergenTransform)' == 'all'">
    <MutexExec Command="$(DotNetSergen) mvct $(SergenTransformArgs)" MutexName="Global\SergenTransformWithDotnetRun" ContinueOnError="true" Condition="'$(DotNetSergen)' != 'dotnet sergen'" WorkingDirectory="$(MSBuildProjectDirectory)" />
    <Exec Command="$(DotNetSergen) mvct $(SergenTransformArgs)" ContinueOnError="true" Condition="'$(DotNetSergen)' == 'dotnet sergen'" />
  </Target>
  <Target Name="TransformServerTypings" AfterTargets="AfterBuild" DependsOnTargets="$(TransformDependsOn)"
          Condition="'$(SergenTransform)' == 'servertypings' OR '$(SergenTransform)' == 'all'">
    <MutexExec Command="$(DotNetSergen) servertypings $(SergenTransformArgs)" MutexName="Global\SergenTransformWithDotnetRun" ContinueOnError="true" Condition="'$(DotNetSergen)' != 'dotnet sergen'" WorkingDirectory="$(MSBuildProjectDirectory)" />
    <Exec Command="$(DotNetSergen) servertypings $(SergenTransformArgs)" ContinueOnError="true" Condition="'$(DotNetSergen)' == 'dotnet sergen'" />
  </Target>
</Project>