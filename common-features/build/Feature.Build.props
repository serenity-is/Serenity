<Project>
  <PropertyGroup>
    <AccelerateBuildsInVisualStudio>true</AccelerateBuildsInVisualStudio>
    <AddAutoRefs Condition="'$(AddAutoRefs)' == ''">true</AddAutoRefs>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <CompressionExcludePatterns>$(CompressionExcludePatterns);**\*.map;**\*.txt;</CompressionExcludePatterns>
    <DefaultItemExcludes>node_modules\**;coverage\**;$(DefaultItemExcludes)</DefaultItemExcludes>
    <DefineConstants Condition="'$(IsPublicDemo)'=='true'">$(DefineConstants);IsPublicDemo</DefineConstants>
    <ESMAssetBasePath>/$(MSBuildProjectName)/esm</ESMAssetBasePath>
    <LangVersion>latest</LangVersion>
    <RestoreNodeTypes>false</RestoreNodeTypes>
    <SerenitySrc Condition="'$(SerenitySrc)' == ''">$(MSBuildThisFileDirectory)..\..\src\</SerenitySrc>
    <StaticWebAssetBasePath>/$(MSBuildProjectName)</StaticWebAssetBasePath>
    <TargetFramework>net10.0</TargetFramework>
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
    <UseArtifactsOutput>true</UseArtifactsOutput>
    <SkipTSBuild Condition="'$(SkipTSBuild)' == '' And '$(DesignTimeBuild)' == 'true'">true</SkipTSBuild>
    <RunTSBuild Condition="'$(RunTSBuild)' == '' And '$(SkipTSBuild)' != 'true'">true</RunTSBuild>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="5.9.3" Condition="Exists('$(MSBuildProjectDirectory)\tsconfig.json')" PrivateAssets="all" IncludeAssets="runtime; build; native; contentfiles; analyzers; buildtransitive" />
    <PackageReference Include="Serenity.Net.Web" Version="$(SerenityVersion)" Condition="!Exists('$(SerenitySrc)web\Serenity.Net.Web.csproj') and '$(AddAutoRefs)' == 'true'" />
    <ProjectReference Include="$(SerenitySrc)web\Serenity.Net.Web.csproj" Condition="Exists('$(SerenitySrc)web\Serenity.Net.Web.csproj') and '$(AddAutoRefs)' == 'true'" />
    <NpmPackageFile Include="$(MSBuildProjectDirectory)\package.json" Condition="Exists('$(MSBuildProjectDirectory)\package.json')" />
  </ItemGroup>
</Project>