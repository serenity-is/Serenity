{
  "name": "@serenity-is/tsbuild",
  "version": "9.1.6",
  "author": "Serenity (https://serenity.is)",
  "bugs": "https://github.com/serenity-is/serenity/issues",
  "description": "Serenity ESBuild functions",
  "dependencies": {
    "esbuild": "catalog:serenity",
    "glob": "catalog:serenity"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "module": "dist/index.js",
  "main": "dist/index.js",
  "import": "dist/index.js",
  "files": [
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ],
  "homepage": "https://github.com/serenity-is/serenity/#readme",
  "keywords": [
    "serenity",
    "business",
    "application",
    "framework",
    "esbuild"
  ],
  "license": "MIT",
  "repository": "https://github.com/serenity-is/serenity/packages/tsbuild",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --format=esm --platform=node --outdir=dist --external:glob --external:esbuild",
    "dts": "tsc",
    "prepublishOnly": "pnpm build && pnpm run test --coverage && pnpm dts",
    "test": "pnpm build && vitest run",
    "tsc": "tsc"
  },  
  "type": "module",
  "types": "dist/index.d.ts"
}