{
    "compileOnSave": false,
    "compilerOptions": {
      "allowJs": false,
      "declaration": true,
      "emitBOM": true,
      "lib": [
        "ES2017",
        "DOM"
      ],
      "jsx": "react-jsx",
      "jsxImportSource": "@serenity-is/sleekdom",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "newLine": "lf",
      "noEmit": true,
      "noEmitHelpers": false,
      "noImplicitAny": true,
      "isolatedModules": true,
      "sourceMap": false,
      "skipLibCheck": false,
      "outDir": "./dist",
      "target": "ESNext",
      "useDefineForClassFields": false
    },
    "include": ["src"]
  }
