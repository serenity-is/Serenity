{
  "name": "@serenity-is/domwise",
  "version": "1.0.0",
  "description": "Use JSX syntax to create DOM elements with full TypeScript support",
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "main": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./jsx-runtime": "./dist/jsx-runtime.js",
    "./jsx-dev-runtime": "./dist/jsx-dev-runtime.js"
  },
  "imports": {
    "#src/jsx-runtime": "./src/jsx-runtime.ts",
    "#src/jsx-dev-runtime": "./src/jsx-dev-runtime.ts"
  },
  "files": [
    "dist/**/*.ts",
    "dist/**/*.css",
    "dist/**/*.js",
    "dist/**/*.map",
    "LICENSE.md",
    "NOTICE.md"
  ],
  "scripts": {
    "build": "node build/build",
    "dts": "dts-bundle-generator -o dist/index.d.ts src/index.ts --project=./tsconfig.json --no-banner --disable-symlinks-following --export-referenced-types=false --external-inlines=@preact/signals-core",
    "prepublishOnly": "pnpm build && pnpm run test --coverage && pnpm dts",
    "test": "pnpm build && vitest run",
    "tsc": "tsc"
  },
  "keywords": [
    "dom",
    "jsx",
    "typescript",
    "library",
    "web",
    "frontend",
    "ui"
  ],
  "author": "Volkan Ceylan, Furkan Evran, Victor Tomaili (https://serenity.is)",
  "repository": "serenity-is/sleekgrid",
  "license": "MIT",
  "bugs": "https://github.com/serenity-is/sleekGrid/issues",
  "homepage": "https://github.com/serenity-is/sleekGrid#readme"
}
