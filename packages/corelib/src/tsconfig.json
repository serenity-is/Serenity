{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-dom",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "newLine": "lf",
    "noImplicitAny": true,
    "outDir": "../out",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2017",
    "types": [],
    "useDefineForClassFields": false
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "test/**/*"
  ]
}